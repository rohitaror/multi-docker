{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "rohiaror/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "rohiaror/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "rohiaror/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "rohiaror/multi-nginx",
            "essential": true,
            "portMappings": [
                {
                "hostPort": 80,
                "containerPort": 80
                }
            ]
        }
    ]

}